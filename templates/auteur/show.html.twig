{% extends 'base.html.twig' %}

{% block title %}Détaills d'un auteur !{% endblock %}

{% block body %}


<div class="card border-primary mb-3" style="max-width: 20rem;">
    <div class="card-header">Détaills d'un Auteur</div>
    <div class="card-body">
      <h4 class="card-title">{{ auteur }}</h4>
      <p class="card-text">
           Date de Naissance : {{ auteur.dateNaissance | date('d-m-Y') }}
    </p>
    <p>
        Nationnalité : {{ auteur.pays }}
    </p>

    <h4 class="card-title">Bibliographie</h2>
    {% for livre in auteur.livres %}
        <a href="{{ path('livre_show', {id : livre.id}) }}">{{ livre.titre }}</a>
    {% endfor %}

    </div>
</div>




{% endblock %}
